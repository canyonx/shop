{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!
{% endblock %}

{% block body %}
	<div class="row my-5">
		<div class="col-4">
			<img src="https://images.unsplash.com/photo-1610701596007-11502861dcfa?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OXx8Y2VyYW1pY3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=600&q=60" alt="image de {{ product.name }}" class="img-fluid">
		</div>

		<div class="col px-5">
			<h1 class="mb-4">{{ product.name }}</h1>
			<h2 class="mb-4">{{ product.price | amount }}</h2>

			{% for c in product.category %}
				<span class="badge bg-info">{{c.name}}</span>
			{% endfor %}
			<p class="my-4">{{ product.description }}</p>
			<a href="#" class="btn btn-success btn-lg my-4">
				<i class="fa fa-shopping-cart"></i>
				Ajouter au panier
			</a>
		</div>
	</div>
{% endblock %}
